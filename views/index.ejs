<!DOCTYPE html>
<html>
  <head>
    <title>Lomax Video</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <!--Stylesheets--> 
	<link rel='stylesheet' href='//www.simile-widgets.org/styles/common.css' type='text/css' />
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

	<!--Data--> 
	<link href="/javascripts/output.csv" type="text/csv" rel="exhibit/data" data-ex-properties="label,namefirst,namelast,setting,ppl,sessionname,sessionnotes,startdate,name,id,latlng" data-ex-hasColumnTitles="true"/>

	<!--Externals--> 
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<script src="//api.simile-widgets.org/exhibit/current/exhibit-api.js"></script>

	<!--Extensions--> 	
	<link rel="exhibit-extension" type="text/javascript" href="//api.simile-widgets.org/exhibit/current/extensions/time/time-extension.js"/>
	<link rel="exhibit-extension" href="//projects.csail.mit.edu/exhibit/api/extensions/flotr/flotr-extension.js"/>
	<link rel="exhibit-extension" type="text/javascript" href="http://api.simile-widgets.org/exhibit/3.1.0rc/extensions/map/map-extension.js" />

	<script src="http://api.simile-widgets.org/exhibit/3.1.0rc/exhibit-api.js"></script>
	<style>
	  .logo {
	  text-align: center
	  }
	  .lens-table {
	  width: 100%
	  }
	  .lens-table td {
	  padding: 10px
	  }
	</style>

  </head>
  <body>
		<nav class="navbar navbar-inverse">
	      <div class="container-fluid">
	        <div class="navbar-header">
	          <a class="navbar-brand" href="#">Lomax Video Database</a>
	        </div>
	      </div>
	    </nav>
	    <div class="row">
	      <div class="col-md-1"></div>
	      <div class="col-md-2">
	      	<div data-ex-role="facet" data-ex-facet-label="Search" data-ex-facet-class="TextSearch"></div>
	       	<div data-ex-role="facet" data-ex-facet-label="Filter by City" data-ex-facet-class="Cloud" data-ex-expression=".ppl" data-ex-height="250px"></div>
	       	<div data-ex-role="facet" data-ex-facet-label="Filter by Setting" data-ex-expression=".setting" data-ex-show-missing="false" data-ex-height="500px"></div>
	      </div>
	      <div class="col-md-8">
	        <div data-ex-role="viewPanel">
	       	 <div data-ex-role="view" data-ex-view-class="Timeline" data-ex-timeline-height="610" data-ex-start=".startdate" data-ex-color-key=".ppl" data-ex-top-band-unit="month" data-ex-top-band-pixels-per-unit="500" data-ex-bottom-band-pixels-per-unit="50"> 
	            <div data-ex-role="lens">
	            	<span data-ex-content=".setting"></span> ... <span data-ex-content=".namefirst"></span> <span data-ex-content=".namelast"></span> ... <span data-ex-content=".sessionname"></span> ... <span data-ex-content=".sessionnotes"></span>
	            </div>
	          </div>

	          <div data-ex-role="view" data-ex-view-class="Tabular" data-ex-columns=".label,.namefirst,.namelast,.setting,.ppl,.sessionname,.sessionnotes,.startdate,.name" data-ex-column-labels="Clip Name,First Name,Last Name,Setting,City,Session Name,Session Notes,Date,Name"></div>

	          <div data-ex-role="view" data-ex-view-class="Tile" data-ex-orders=".label,.namefirst,.namelast,.setting,.ppl,.sessionname,.sessionnotes,.startdate,.name" data-ex-paginate="true" data-ex-pagesize="10"></div>


	          <div data-ex-role="view" data-ex-view-class="Map" data-ex-latlng=".latlng" data-ex-center="36.1627, -86.7816" data-ex-zoom="5" data-ex-map-height="610" data-show-header="false" data-ex-latlngOrder="lnglat">
        	 	<div data-ex-role="lens">
	            	<span data-ex-content=".setting"></span> ... <span data-ex-content=".namefirst"></span> <span data-ex-content=".namelast"></span> ... <span data-ex-content=".sessionname"></span> ... <span data-ex-content=".sessionnotes"></span>
	            </div>

	        </div>
	      </div>
	      <div class="col-md-1"></div>
	    </div>


  </body>
  <script>

  </script> 
</html>
